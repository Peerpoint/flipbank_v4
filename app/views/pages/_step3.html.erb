<section class="container" id="main">

  <!-- Start Survey container -->
  <div id="survey_container">

    <div id="top-wizard">
      <strong>Progress </strong><br>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">
          50%
        </div>
      </div>
      <div class="shadow"></div>
    </div>
    <!-- end top-wizard -->


    <div id="middle-wizard">

      <!----SECTION 3-------->

      <div class="step">
        <div class="row">
          <h3 class="col-md-10">Who is the borrower?</h3>
          <ul class="data-list clearfix">
            <%= f.input :borrower, as: :radio_buttons, collection: [["Individual", true], ["Entity", false]], label: "How will you hold ownership?" %>
          </ul>

          <!--if individual-->
          <div id="individual">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :fname, 'First Name' %>
                  <%= f.text_field :fname, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :lname, 'Last name' %>
                  <%= f.text_field :lname, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :hemail, 'Email address' %>
                  <%= f.text_field :hemail, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :hphone, 'Phone number' %>
                  <%= f.text_field :hphone, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :home_add, 'Home address' %>
                  <%= f.text_field :home_add, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :citizen, 'Citizen Status' %>
                  <%= f.input :citizen, label: false,  collection: [['US citizen', 1], ['Permanent resident alien', 2], ['Non-permanent resident alien', 3], ['Foreign national residing outside US', 4]], prompt: "Select Your Status...", class:"form-control" %>
              </div>
            </div>

            <br>

            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :credit_score, 'Estimate credit score' %>
                  <%= f.text_field :credit_score, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :bk, 'Bankruptcy discharge date (if applicable)' %>
                  <%= f.text_field :bk, class: "form-control", placeholder: "mm/dd/yyyy" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :sixty_days, 'Number of 60-day delinquencies' %>
                  <%= f.text_field :sixty_days, class: "form-control" %>
              </div>
            </div>

            <ul class="data-list clearfix">
              <%= f.input :foreclosure, as: :radio_buttons, label: "Have you been foreclosed on or had to sell short?" %>
            </ul>
            <br>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :last_fc_ss, 'If yes, please provide the date' %>
                  <%= f.text_field :last_fc_ss, class: "form-control" %>
              </div>
            </div>

          </div>


          <!--if entity-->
          <div id="entity">
            <div class="row">
              <h3>Tell us about your entity</h3>

              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :entity, 'Entity type' %>
                    <%= f.input :entity, label: false,  collection: [['Limited liability company', 1], ['Limited partnership', 2], ['Corporation', 3], ['Statutory trust', 4], ['Common law trust', 5], ['Sole proprietor / natural person', 6]], prompt: "Select Your Entity Type...", class:"form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :bizname, 'Entity Name' %>
                    <%= f.text_field :bizname, class: "form-control" %>
                </div>
              </div>


              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :bizadd, 'Address' %>
                    <%= f.text_field :bizadd, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :bizemail, 'Email' %>
                    <%= f.text_field :bizemail, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :bizphone, 'Phone' %>
                    <%= f.text_field :bizphone, class: "form-control" %>
                </div>
              </div>


              <h3>Who will be the Guarantor</h3>

              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :fname, 'First Name' %>
                    <%= f.text_field :fname, class: "form-control" %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :lname, 'Last name' %>
                    <%= f.text_field :lname, class: "form-control" %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :hemail, 'Email address' %>
                    <%= f.text_field :hemail, class: "form-control" %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :hphone, 'Phone number' %>
                    <%= f.text_field :hphone, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :citizen, 'Citizen Status' %>
                    <%= f.input :citizen, label: false,  collection: [['US citizen', 1], ['Permanent resident alien', 2], ['Non-permanent resident alien', 3], ['Foreign national residing outside US', 4]], prompt: "Select Your Status...", class:"form-control" %>
                </div>
              </div>

              <br>

              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :credit_score, 'Estimate credit score' %>
                    <%= f.text_field :credit_score, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :bk, 'Bankruptcy discharge date (if applicable)' %>
                    <%= f.text_field :bk, class: "form-control", placeholder: "mm/dd/yyyy" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :sixty_days, 'Number of 60-day delinquencies' %>
                    <%= f.text_field :sixty_days, class: "form-control" %>
                </div>
              </div>

              <label class="indent">Have you been foreclosed on or had to sell short?</label>
              <ul class="data-list clearfix">
                <li><input name="foreclosure" type="radio" class="required" value="no"><label class="label_gender">No</label></li><br>
                <li><input name="foreclosure" type="radio" class="required" value="yes"><label class="label_gender">Yes</label></li>
              </ul>
              <br>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :last_fc_ss, 'If yes, please provide the date' %>
                    <%= f.text_field :last_fc_ss, class: "form-control" %>
                </div>
              </div>
            </div>

            <br>
          </div>
        </div>
      </div>

    </div>
    <!-- end step question 3 with branch-->

    <div id="bottom-wizard">

      <div class="form-group">
        <%= link_to :Back, "/loans/#{@loan.id}/step2", class: 'btn btn-back' %>
          <%= f.submit :Continue, class:'btn btn-next' %>
      </div>

    </div>
    <!-- end bottom-wizard -->

  </div>
  </div>
  <!-- end Survey container -->
</section>
<!-- end section main container -->