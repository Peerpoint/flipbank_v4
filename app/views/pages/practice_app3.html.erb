<%= render 'layouts/header_app' %>

<div class="container">
     <div class="row">
         <div class="col-md-12 main-title">
         <center><h1>Fast 5 Minute Application</h1></center>
        </div>
 	  </div>
</div>

<section class="container" id="main">

<!-- Start Survey container -->
<div id="survey_container">

	<div id="top-wizard">
		<strong>Progress </strong><br>
		<div class="progress">
		  <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">
		    50%
		  </div>
		</div>
		<div class="shadow"></div>
	</div><!-- end top-wizard -->

	<div id="middle-wizard">
    
	<form name="survey_container">

    
	    	<div class="step">
		<div class="row">
		  <h3 class="text-center">How will you hold ownership?</h3>
		    <div class="col-sm-12">
    				<ul class="data-list">
    					<li><input name="title" type="radio" class="required" value="individual"> Individual</li><br>
    					<li><input name="title" type="radio" class="required" value="entity"> Entity</li>
    				</ul>
			</div>
			
			<h2>Entity Information</h2>
			<div class="col-sm-12">
			    <div class="form-group">
      			  <label for="gross_loan">Entity type</label>
      			    <select class="form-control">
      				     <option>Please select one...</option>
      				     <option>Corporation</option>
      				     <option>Limited Liability Company (LLC)</option>
      				     <option>Limited Partnership</option>
      				     <option>Statutory Trust</option>
      				     <option>Common Law Trust</option>
      				</select>
      			</div>
      		</div>	
      		<div class="col-sm-6">	
		        <div class="form-group">
      			  <label for="trans_type">Entity Name</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
      			<div class="form-group">
      			  <label for="trans_type">Property address</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
			</div>
			<div class="col-sm-6">	
		        <div class="form-group">
      			  <label for="trans_type">Business Email</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
      			<div class="form-group">
      			  <label for="trans_type">Business Phone</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
			</div>
			
			<h2>Guarantor Information</h2>
		    <div class="col-sm-6">
		        <div class="form-group">
      			  <label for="trans_type">First Name</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
		        		
      			<div class="form-group">
      			  <label for="trans_type">Last Name</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
			</div>
			<div class="col-sm-6">
		        <div class="form-group">
      			  <label for="trans_type">Email</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
		        		
      			<div class="form-group">
      			  <label for="trans_type">Phone</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
			</div>
			<div class="col-sm-6">
		        <div class="form-group">
      			  <label for="trans_type">Property address</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
		        		
      			<div class="form-group">
      			  <label for="gross_loan">Property type</label>
      			    <select class="form-control">
      				     <option>Please select one...</option>
      				     <option>US Citizen</option>
      				     <option>Permanent Resident Alien</option>
      				     <option>Non-Permanent Resident Alien</option>
      				     <option>Foreign National Residing Outside US</option>
      				</select>
      			</div>
			</div>
		   <div class="col-sm-6">
      			<div class="form-group">
  				    <label for="closing_date">Estimated credit score</label>
  				    <input type="text" class="form-control" id="closing_date">
  				</div>
  			  	<div class="form-group">
  				    <label for="closing_date">Bankruptcy discharge date</label>
  				    <input type="text" class="form-control" id="closing_date" placeholder="mm/dd/yyyy">
  				</div>
		   </div><!-- end col-sm-6 -->
		   
		   <div class="col-sm-6">
      			<div class="form-group">
  				    <label for="closing_date">Number of 60 Day Delinquencies</label>
  				    <input type="text" class="form-control" id="closing_date">
  				</div>
  			</div>	
  		   <div class="col-sm-6">		
  			  	<div class="form-group">
  				    <label for="closing_date">Any foreclosures or short sales in the last 7 years?</label>
  				    <select class="form-control">
      				     <option>Please select one...</option>
      				     <option>No</option>
      				     <option>Yes</option>
      				</select>
  				</div>
		   </div>
		   
		   
			
				<div id="no_rehab">
				</div>
			  
				<div class="col-sm-6" id="rehab_funds">
    					<div class="form-group">
    						<label for="gross_loan">Initial Amount Requested</label>
    				    	<input type="text" class="form-control" id="gross_loan" placeholder="$">
    				  </div>
				   +
				 
				   <div class="form-group">
				   		<label for="rehab_funds">Rehab Amount Requested</label>
				    	  <input type="text" class="form-control" id="rehab_funds1" placeholder="$">
				    </div>
				  
				    =
				   
					<div class="form-group">
						<label for="rehab_funds">Total Amount Requested</label>
				    	<input type="text" class="form-control" id="rehab_funds2" placeholder="$">
				    </div>
				   
					<p>The total dollar amount requested for this property.  This is the dollar amount of the loan you want to apply for (rounded up to the nearest $100).</p>
				</div>
										
										</div><!-- end col-md-6 -->
					                  
									
									</div><!-- end row -->
									<br><br>
					<center><button class="btn btn-back">Back</button>&nbsp;&nbsp;<button class="btn btn-next">Continue</button></center>
              
            
        </form>
   </div><!-- end step info-->
</div><!-- end Survey container -->
</section><!-- end section main container -->

<script>
$('input[type=radio][name=rehab]').change(function () {
  $('#no_rehab').css("display","none");
  $('#rehab_funds').css("display","none");
  console.log($(this).val());
  var fieldToShow = $(this).val();
  $("#" + fieldToShow).css("display","block");
});
	
</script>