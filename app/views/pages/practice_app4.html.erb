<%= render 'layouts/header_app' %>

<div class="container">
     <div class="row">
         <div class="col-md-12 main-title">
         <center><h1>Fast 5 Minute Application</h1></center>
        </div>
 	  </div>
</div>

<section class="container" id="main">

<!-- Start Survey container -->
<div id="survey_container">

	<div id="top-wizard">
		<strong>Progress </strong><br>
		<div class="progress">
		  <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;">
		    75%
		  </div>
		</div>
		<div class="shadow"></div>
	</div><!-- end top-wizard -->

	<div id="middle-wizard">
    
	<form name="survey_container">

    
	    	<div class="step">
		<div class="row">
		  <h3 class="text-center">You Real Estate Experience?</h3>
     		<div class="col-sm-6">	
		        <div class="form-group">
      			  <label for="trans_type">Number of properties purchased last 6 months?</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
      			<div class="form-group">
      			  <label for="trans_type">Number of properties purchased last 12 months?</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
			</div>
			<div class="col-sm-6">	
		        <div class="form-group">
      			  <label for="trans_type">Number of properties purchased ever?</label>
      				<input type="text" class="form-control" id="gross_loan">
      			</div>
      			<div class="form-group">
      			  <label for="trans_type">Average home purchase price?</label>
      				<input type="text" class="form-control" id="gross_loan" placeholder="$">
      			</div>
			</div>
			
			
					                  
									
									</div><!-- end row -->
									<br><br>
					<center><button class="btn btn-back">Back</button>&nbsp;&nbsp;<button class="btn btn-next">Continue</button></center>
              
            
        </form>
   </div><!-- end step info-->
</div><!-- end Survey container -->
</section><!-- end section main container -->

<script>
$('input[type=radio][name=rehab]').change(function () {
  $('#no_rehab').css("display","none");
  $('#rehab_funds').css("display","none");
  console.log($(this).val());
  var fieldToShow = $(this).val();
  $("#" + fieldToShow).css("display","block");
});
	
</script>