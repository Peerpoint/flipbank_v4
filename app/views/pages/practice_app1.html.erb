<%= render 'layouts/header_app' %>

<div class="container">
     <div class="row">
         <div class="col-md-12 main-title">
         <center><h1>Fast 5 Minute Application</h1></center>
        </div>
 	  </div>
</div>

<section class="container" id="main">

<!-- Start Survey container -->
<div id="survey_container">

	<div id="top-wizard">
		<strong>Progress </strong><br>
		<div class="progress">
		  <div class="progress-bar" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 10%;">
		    0%
		  </div>
		</div>
		<div class="shadow"></div>
	</div><!-- end top-wizard -->

	<div id="middle-wizard">
    
	<form name="survey_container">

    
	    	<div class="step">
		<div class="row">
		  <h3 class="text-center">Property details</h3>
		    <div class="col-sm-6">		
      			<div class="form-group">
      			  <label for="trans_type">Loan type</label>
      				<select class="form-control">
      				     <option>Please select one...</option>
      				     <option>New Purchase</option>
      				     <option>Refinance</option>
      				</select>
      			</div>
			
      			<div class="form-group">
      			  <label for="gross_loan">Loan amount requested</label>
      				<input type="text" class="form-control" id="gross_loan" placeholder="$">
      			</div>
       </div>
	
		   <div class="col-sm-6">
      			<div class="form-group">
      			  <label for="trans_type">Loan term</label>
      				<select class="form-control">
      				  <option>Please select one...</option>
      				  <option>12 month IO (rehab loans)</option>
      				  <option>30 years (term loan)</option>
      				</select>
      			</div>
  			  	<div class="form-group">
  				    <label for="closing_date">Target closing date</label>
  				    <input type="text" class="form-control" id="closing_date" placeholder="mm/dd/yyyy">
  				  </div>
		   </div><!-- end col-sm-6 -->
		   
		   <div class="col-sm-6">
    			<label>Will you need rehab funds?</label>            
    				<ul class="data-list">
    					<li><input name="rehab" type="radio" class="required" value="rehab_funds"> Yes</li><br>
    					<li><input name="rehab" type="radio" class="required" value="no_rehab"> No</li>
    				</ul>
			</div>
			
				<div id="no_rehab">
				</div>
			  
				<div class="col-sm-6" id="rehab_funds">
    					<div class="form-group">
    						<label for="gross_loan">Initial Amount Requested</label>
    				    	<input type="text" class="form-control" id="gross_loan" placeholder="$">
    				  </div>
				   +
				 
				   <div class="form-group">
				   		<label for="rehab_funds">Rehab Amount Requested</label>
				    	  <input type="text" class="form-control" id="rehab_funds1" placeholder="$">
				    </div>
				  
				    =
				   
					<div class="form-group">
						<label for="rehab_funds">Total Amount Requested</label>
				    	<input type="text" class="form-control" id="rehab_funds2" placeholder="$">
				    </div>
				   
					<p>The total dollar amount requested for this property.  This is the dollar amount of the loan you want to apply for (rounded up to the nearest $100).</p>
				</div>
										
										</div><!-- end col-md-6 -->
					                  
									
									</div><!-- end row -->
									<br><br>
					<center><button class="btn btn-next">Continue</button></center>
              
            
        </form>
   </div><!-- end step info-->
</div><!-- end Survey container -->
</section><!-- end section main container -->

<script>
$('input[type=radio][name=rehab]').change(function () {
  $('#no_rehab').css("display","none");
  $('#rehab_funds').css("display","none");
  console.log($(this).val());
  var fieldToShow = $(this).val();
  $("#" + fieldToShow).css("display","block");
});
	
</script>
               








